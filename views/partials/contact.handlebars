<form id="contact-form" method="POST" action="/">
    <div class="container my-5 py-5 z-depth-1" id="contact">
        <!--Section: Content-->
        <section class="text-center px-md-5 mx-md-5 dark-grey-text">

            <!-- Section heading -->
            <h3 class="font-weight-bold mb-4">Contact Us</h3>
            <hr class="my-4">
            <!-- Section description -->
            <h4 class="mb-3">We'd love to hear from you! <br></h4>
            <p class="text-center w-responsive mx-auto mb-5">
                Drop us a message using the contact form below and one of our team members will get back as soon as
                possible.</p>

            <!-- Grid row -->
            <div class="row">

                <!-- Grid column -->
                <div class="col-md-9 mb-md-0 mb-5">



                    <!-- Grid row -->
                    <div class="row">
                        {{!-- {{msg}} --}}

                        <!-- Grid column -->
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <input type="text" name="name" class="form-control">
                                <label for="contact-name" class="">Your Name</label>
                            </div>
                        </div>
                        <!-- Grid column -->

                        <!-- Grid column -->
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <input type="text" name="email" class="form-control">
                                <label for="contact-email" class="">Your email</label>
                            </div>
                        </div>
                        <!-- Grid column -->

                    </div>
                    <!-- Grid row -->

                    <!-- Grid row -->
                    <div class="row">

                        <!-- Grid column -->
                        <div class="col-md-12">
                            <div class="md-form mb-0">
                                <input type="text" name="subject" class="form-control">
                                <label for="contact-Subject" class="">Subject</label>
                            </div>
                        </div>
                        <!-- Grid column -->

                    </div>
                    <!-- Grid row -->

                    <!-- Grid row -->
                    <div class="row">

                        <!-- Grid column -->
                        <div class="col-md-12">
                            <div class="md-form">
                                <textarea name="message" class="form-control md-textarea" rows="3"></textarea>
                                <label for="contact-message">Your message</label>
                            </div>
                        </div>
                        <!-- Grid column -->

                    </div>
                    <!-- Grid row -->



                    <div class="text-center text-md-left">
                        <button type="submit" class="btn btn-lily btn-md btn-rounded">Send</button>
                    </div>

                </div>
                <!-- Grid column -->

                <!-- Grid column -->
                <div class="col-md-3 text-center">
                    <ul class="list-unstyled mb-0">
                        <li>
                            <i class="fas fa-map-marker-alt fa-2x text-default"></i>
                            <p>London, United Kingdom</p>
                        </li>
                        <li>
                            <i class="fas fa-phone fa-2x mt-4 text-default"></i>
                            <p>+44 7500 178455</p>
                        </li>
                        <li>
                            <i class="fas fa-envelope fa-2x mt-4 text-default"></i>
                            <p class="mb-0">example@gmail.com</p>
                        </li>
                    </ul>
                </div>
                <!-- Grid column -->

            </div>
            <!-- Grid row -->

        </section>
        <!--Section: Content-->


    </div>

</form>